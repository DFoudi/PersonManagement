@{
    var eventToUpdate = ViewBag.update;
}


<form asp-controller="Event" asp-action="UpdateEvent">
    <input value="@eventToUpdate?.Id" type="hidden" name="id" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputName">Name</label>
            <input name="Name" type="text" class="form-control" id="inputName" placeholder="Name" value="@eventToUpdate?.Name">
        </div>
        <div class="form-group col-md-6">
            <label for="inputDate">Date</label>
            <input name="Date" type="date" class="form-control" id="inputDate" placeholder="Date Event" value="@eventToUpdate?.Date">
        </div>
        <div class="form-group col-md-6">
            <label for="inputAddress">Address</label>
            <input name="Address" type="text" class="form-control" id="inputAddress" placeholder="Address" value="@eventToUpdate?.Address">
        </div>
        <div class="form-group col-md-6">
            <label for="inputCity">City</label>
            <input name="City" type="text" class="form-control" id="inputCity" placeholder="City" value="@eventToUpdate?.City">
        </div>
        <div class="form-group col-md-6">
            <label for="inputRoom">Room</label>
            <input name="Room" type="text" class="form-control" id="inputRoom" placeholder="Room" value="@eventToUpdate?.Room">
        </div>
        <div class="form-group">
            <label for="inputOrganizerId">Organizer Id 1</label>
            <input value="1" name="OrganizerId" type="text" class="form-control" id="inputOrganizerId" placeholder="OrganizerId">
        </div>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
                Check me out
            </label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Sign in</button>
</form>