@{
    var personUpdate = ViewBag.Person;
}

    <form asp-controller="Person" asp-action="UpdatePersonDB">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputName">Nom</label>
                <input type="hidden" name="Id" value="@personUpdate?.Id" />
                <input name="Name" type="text" class="form-control" id="inputName" placeholder="Name" value="@personUpdate?.Name">
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail4">FirstName</label>
                <input name="FirstName" type="text" class="form-control" id="inputFirstName" placeholder="FirstName" value="@personUpdate?.FirstName">
            </div>
            <div class="form-group col-md-6">
                <label for="inputBirthDate">Birth Date</label>
                <input name="BirthDate" type="date" class="form-control" id="inputBirthDate" placeholder="BirthDate" value="@personUpdate?.BirthDate">
            </div>
            <div class="form-group col-md-6">
                <label for="inputAge">Age</label>
                <input name="Age" type="number" class="form-control" id="inputAge" placeholder="Age" value="@personUpdate?.Age">
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail4">Email</label>
                <input name="Email" type="email" class="form-control" id="inputEmail4" placeholder="Email" value="@personUpdate?.Email">
            </div>
            <div class="form-group col-md-6">
                <label for="inputPhoneNumber">Phone Number</label>
                <input name="PhoneNumber" type="text" class="form-control" id="inputPhoneNumber" placeholder="Phone Number" value="@personUpdate?.PhoneNumber">
            </div>
            <div class="form-group">
                <label for="inputAddress">Address</label>
                <input name="Adress" type="text" class="form-control" id="inputAddress" placeholder="12 rue de la liberté" value="@personUpdate?.Address">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCity">City</label>
                <input name="City" type="text" class="form-control" id="inputCity" placeholder="City" value="@personUpdate?.City">
            </div>
        </div>

        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-warning">Update</button>
    </form>